<form theme="light">
  <label>Overview</label>
  <search id="basesearch">
    <query>index=_internal sourcetype="scheduler" status="success" app="central_security_app_for_splunk" splunk_server=local
| where (alert_action!="" OR (result_count&gt;0 AND suppressed=0))
| stats count as alert_count by savedsearch_name
| append [| rest /servicesNS/-/central_security_app_for_splunk/saved/searches count=0 splunk_server=local | search "eai:acl.app"="central_security_app_for_splunk" | replace " " with "%20", "," with "%2C", "'" with "%27" in encodedtitle | fields title, disabled, is_scheduled | rename title as savedsearch_name]
| stats first(*) as * by savedsearch_name
| eval alert_count=if(isnull(alert_count), 0, alert_count)
| search disabled=0 is_scheduled=1 
| search NOT savedsearch_name IN ("Windows - Hosts Missing Update", "Windows - Hosts Lookup Gen", "Ransomware - Calculate UpperBound for Spike in File Writes")
| table savedsearch_name, alert_count </query>
    <earliest>$timeRange.earliest$</earliest>
    <latest>$timeRange.latest$</latest>
    <sampleRatio>1</sampleRatio>
  </search>
  <fieldset submitButton="false">
    <input type="time" token="timeRange">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Network Compromise</title>
      <table>
        <search base="basesearch">
          <query>| `cs_filter_savedsearches("Network Compromise")`</query>
        </search>
        <option name="count">10</option>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <format type="color" field="disabled">
          <colorPalette type="map">{"1":#F7BC38}</colorPalette>
        </format>
        <format type="color" field="is_scheduled">
          <colorPalette type="map">{"0":#F7BC38}</colorPalette>
        </format>
        <format type="color" field="alert_count">
          <colorPalette type="list">[#03991a,#a3030b]</colorPalette>
          <scale type="threshold">1</scale>
        </format>
        <fields>["Name","alert_count"]</fields>
        <drilldown>
          <link target="_blank">/app/central_security_app_for_splunk/cs_detailed_dashboard?form.tkn_savedsearch=$row.savedsearch_name$</link>
        </drilldown>
      </table>
    </panel>
